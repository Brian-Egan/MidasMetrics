= form_for @network, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :fb_id, :class => 'control-label'
    .controls
      = f.text_field :fb_id, :class => 'text_field'
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  .control-group
    = f.label :logo, :class => 'control-label'
    .controls
      = f.file_field :logo, :class => 'file_field'
  .control-group
    = f.label :fb_fans, :class => 'control-label'
    .controls
      = f.text_field :fb_fans, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), networks_path, :class => 'btn'
